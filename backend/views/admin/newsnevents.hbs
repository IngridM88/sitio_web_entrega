 <div>
    <div class="d-grid gap-2 d-md-flex justify-content-md-end" style="color:rgb(38, 184, 171); margin-top:30px;margin-bottom:30px">
        <h6 class="text-end">Hi there, {{username}} ! You're looking fine today! </h6>
        <a class=" btn btn-info" href="/admin/login/logout"> Logout</a>
    </div>
<div style="color:rgb(38, 184, 171); margin-top:30px; margin-bottom:40px">
    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
        <div class="container text-center">
            <div class="row row px-10">
                <div class="col"> <!--conatainer for add button and box-name -->
                    <div class="row justify-content-center">
                        <div class="col-4">
                            <h3>News and Events</h3>
                        </div>
                        <div class="col-4">
                            <a href="/admin/newsnevents/insert" class="btn btn-light">+ ADD</a>
                        </div>
                    </div>
                </div

                <div class="col">
                    <table class="table table-dark table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Entry Nr# </th>
                                <th scope="col">Subject</th>
                                <th scope="col">Type</th>
                                <th scope="col">Image</th>
                                <th scope="col">Entry </th>
                                <th scope="col">Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each newsnevents}}
                            <tr>
                                <th scope="row">{{id}}</th>
                                <td>{{title}}</td>
                                <td>{{subtitle}}</td>
                                <td>{{{image}}}</td>
                                <td>{{body}}</td>
                                <td>
                                    <a href="/admin/newsnevents/update/{{id}}" ><span class="material-symbols-outlined"
                                            style="margin:3px">edit_note</span>
                                    </a>
                                    <a href="/admin/newsnevents/delete/{{id}}"><span class="material-symbols-outlined"
                                            style="margin:3px">delete</span></a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
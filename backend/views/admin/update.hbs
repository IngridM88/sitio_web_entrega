<body>
    <div class="card text-bg-dark text-center">
        <div class="row justify-content-center">
    
            <h4>Update News / Events</h4>

            <div class="col-4">
                <form action="/admin/newsnevents/update" method="post" enctype="multipart/form-data"
                    class="card-body cardbody-color">

                    <input type="hidden" value="{{newsnevents.id}}" name="id">

                    <div class="mb-3 text-center">
                        <label for="title" class="form-label">Subject</label>
                        <input type="text" class="form-control text-center" value="{{newsnevents.title}}" name="title"
                            placeholder="Write here...">
                    </div>

                    <div class="mb-3 text-center">
                        <label for="subtitle" class="form-label">Type</label>
                        <textarea class="form-control text-center" name="subtitle" rows="5"
                            placeholder="Write here...">{{newsnevents.subtitle}}</textarea>
                    </div>

                    <div class="mb-3 text-center">
                        <label for="image" class="form-label">Image</label>
                        <input type="file" name="image" id="image" style="margin-left:45px">

                        <label style="margin:5px"><input type="checkbox" name="img_delete" value="1"
                                id="img_delete">Delete current image?</label>

                        <input type="hidden" name="img_original" value="{{newsnevents.img_id}}">
                    </div>

                    <div class="mb-3 text-center">
                        <label for="body" class="form-label">Entry</label>
                        <textarea class="form-control text-center" name="body" rows="5"
                            placeholder="Write here...">{{newsnevents.body}}</textarea>
                    </div>

                    <div class="mb-3 text-center">
                        <button type="submit" class="btn px-5 w-80"
                            style="background-color:rgb(202, 15, 118); margin-top:20px;"> Update Entry</button>
                    </div>
                    {{#if error}}
                    <p style="font-size:large">{{message}}</p>
                    {{/if}}
                    <a href="/admin/newsnevents" class="btn px-5 w-80"
                        style="background-color:rgb(202, 15, 118); margin-top:20px;">Cancel? >>Back to News & Events</a>
                </form>
            </div>
        </div>
    </div>
</body>